<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/view_finder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/accelplot"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/accelplot" />

    <TextView
        android:id="@+id/vibroTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="VibroBP"
        android:rotation="180"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/accelplot"
        style="@style/APDefacto.Light"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:backgroundColor="#FFF"
        app:domainTitle="Time (s)"
        app:graphBackgroundColor="#FFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        app:lineLabelRotationBottom="-45"
        app:rangeTitle="Applied Force (N)"
        app:title="Force" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/ppgplot"
        style="@style/APDefacto.Light"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:rotation="180"
        app:backgroundColor="@color/white"
        app:graphBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/accelplot"
        app:layout_constraintStart_toStartOf="parent"
        app:title="PPG" />

    <Button
        android:id="@+id/lockScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock Screen"
        app:layout_constraintBottom_toTopOf="@id/recordButton"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        android:enabled="false"/>
    <Button
        android:id="@+id/isoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calibrate ISO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="80dp"
        android:rotation="270"/>

    <Button
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        app:layout_constraintBottom_toTopOf="@id/vibrateButton"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        android:enabled="false"
        />

    <Button
        android:id="@+id/vibrateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recordButton"
        android:visibility="invisible"
        android:enabled="false"
        />

    <Button
        android:id="@+id/CalibrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        />

    <Button
        android:id="@+id/accelButton"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:text="Switch Channel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vibrateButton"

        android:visibility="invisible"
        android:enabled="false"/>
<!--    <SeekBar-->
<!--        android:id="@+id/fingerSizer"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="74dp"-->
<!--        android:rotation="270"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        android:layout_marginEnd="60dp"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->
    <Button
        android:id="@+id/fingerSizerplus"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:rotation="270"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="+"
        />
    <Button
        android:id="@+id/fingerSizerminus"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:rotation="270"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="-"
        />
    <TextView
        android:id="@+id/fingerSizerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="270"
        android:text="Finger Size"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="-95dp"
        app:layout_constraintEnd_toStartOf="@+id/fingerSizerplus"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idNumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="id"
        android:inputType="number"

        app:layout_constraintBottom_toTopOf="@+id/ppgplot"
        app:layout_constraintEnd_toStartOf="@id/trialNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vibroTitle" />

    <EditText
        android:id="@+id/trialNumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="trial"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/ppgplot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/idNumber"
        app:layout_constraintTop_toBottomOf="@+id/vibroTitle" />

    <ImageView
        android:id="@+id/fingerGuide"
        android:layout_width="92dp"
        android:layout_height="129dp"
        android:rotation="180"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"
        android:layout_marginBottom="-20dp"
        app:srcCompat="@drawable/fingernail" />

    <EditText
        android:id="@+id/sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="sysBP"
        android:inputType="number"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="140dp"
        app:layout_constraintTop_toBottomOf="@+id/dia" />

    <EditText
        android:id="@+id/dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="diaBP"
        android:inputType="number"
        android:rotation="180"
        app:layout_constraintBottom_toTopOf="@+id/sys"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="140dp"
        app:layout_constraintTop_toBottomOf="@id/pulse" />

    <EditText
        android:id="@+id/pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="pulse"
        android:inputType="number"
        android:rotation="180"
        app:layout_constraintBottom_toTopOf="@+id/dia"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="140dp"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>